/**index.wxss**/
.bg {
  position: absolute;
  right: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
}
.bg:after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.4);
}
.image {
  height: 100%;
  width: 100%;
  vertical-align: top;
}

.focus {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.main {
  display: flex;
  flex: 1;
  justify-content: space-between;
  margin: 0 70rpx;
  padding: 60rpx 0 0;
}

.title {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  color: #fff;
  font-size: 100rpx;
}

.takee {
  display: block;
  width: 1em;
  line-height: 1.3;
  font-size: 140rpx;
  font-weight: 300;
}

.dimSum {
  display: block;
  width: 1em;
  margin: 60rpx 0 0;
  padding: 10rpx 10rpx;
  line-height: 1.5;
  font-weight: 300;
  font-size: 60rpx;
  background: #ff0000;
}

.info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info_img {
  display: block;
  width: 350rpx;
  height: 350rpx;
  margin: 0 0 50rpx;
  border: 8rpx solid #000;
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .3);
}

.slogan {
  margin: 30rpx 0 0;
  display: block;
  font-size: 46rpx;
  color: #fff;
  opacity: 0.8;
}

.go {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 400rpx;
  height: 400rpx;
}

.go_img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.goTxt {
  position: relative;
  z-index: 1;
  color: #232323;
  margin: 10rpx 0 0;
  font-size: 38rpx;
  line-height: 1.2;
}
